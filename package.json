{
  "name": "node-boilerplate-api",
  "version": "1.0.0",
  "description": "Boilerplate project for Nodejs API's",
  "author": "Christiaan Maks <christilut@gmail.com>",
  "main": "index.ts",
  "private": false,
  "engines": {
    "node": "8",
    "npm": "6"
  },
  "scripts": {
    "start": "npm run build && node dist/server/index",
    "build": "npm run clean && tsc && npm run build:copy-gql && npm run build:copy-testfiles",
    "build:copy-gql": "copyfiles server/**/*.gql dist/",
    "build:copy-testfiles": "copyfiles tests/files/* dist/",
    "dev": "echo 'Please enter your password to run docker commands:' && sudo npm run dev:container",
    "dev:container": "docker-compose up",
    "dev:watch": "cross-env DEBUG=true nodemon --exec 'ts-node' --ext ts,gql server/index.ts",
    "deploy": "npm run build && npm run test:all && git push heroku master",
    "release": "standard-version --no-verify",
    "lint": "tslint --project .",
    "clean": "rm -rf dist/",
    "test": "npm run pretest && ava --match='!*{slow}*'",
    "test:match": "npm run pretest && ava",
    "test:all": "npm run pretest && ava",
    "test:watch": "npm run pretest && ava --watch",
    "pretest": "! grep -ir --exclude-dir=node_modules --exclude-dir=.git --exclude-dir=.vscode --exclude=package.json 'dist/' .",
    "test:coverage": "cross-env NODE_ENV=test nyc ava",
    "report-coverage": "nyc report --reporter=html",
    "cli:createUser": "ts-node cli/createUser",
    "scan:circular-dependencies": "madge --circular --extensions ts ./server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Christilut/node-api-boilerplate"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "es2017",
    "API",
    "boilerplate",
    "graphql",
    "typeorm",
    "postgres",
    "sql",
    "typescript"
  ],
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/faker": "^4.1.4",
    "@types/fs-extra": "^5.0.4",
    "@types/graphql": "^14.0.2",
    "@types/http-status": "^0.2.30",
    "@types/inquirer": "0.0.43",
    "@types/joi": "^13.6.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mongoose": "^5.3.0",
    "@types/node": "^8.10.10",
    "@types/raven": "^2.5.1",
    "@types/supertest": "^2.0.6",
    "@types/winston": "^2.4.4",
    "@types/zen-observable": "^0.8.0",
    "apollo-link": "^1.2.3",
    "apollo-server-express": "^1.3.6",
    "app-module-path": "2.2.0",
    "ava": "1.0.0-beta.8",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.1",
    "body-parser": "^1.18.3",
    "commitizen": "^3.0.2",
    "compression": "^1.7.3",
    "concurrently": "^4.0.1",
    "copyfiles": "^2.1.0",
    "cors": "2.8.4",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "^6.1.0",
    "eslint-config-standard": "^12.0.0",
    "express": "^4.16.4",
    "express-promise-router": "^3.0.3",
    "express-rate-limiter": "^1.3.1",
    "express-validation": "^1.0.2",
    "express-winston": "^3.0.0",
    "faker": "^4.1.0",
    "forest-express-mongoose": "^2.14.3",
    "fs-extra": "^7.0.0",
    "get-port": "^4.0.0",
    "graphql": "^0.13.2",
    "graphql-iso-date": "^3.6.1",
    "graphql-tools": "^3.0.1",
    "handlebars": "^4.0.12",
    "helmet": "^3.14.0",
    "http-status": "^1.2.0",
    "husky": "^1.1.2",
    "inquirer": "^6.2.0",
    "joi": "^14.0.0",
    "jsonwebtoken": "^8.3.0",
    "madge": "^3.2.0",
    "merge-graphql-schemas": "^1.5.1",
    "mongodb-memory-server": "^2.4.3",
    "mongoose": "^5.3.9",
    "morgan": "^1.9.1",
    "nodemailer": "^4.6.8",
    "nodemailer-mailgun-transport": "^1.4.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.1.0",
    "randomatic": "^3.1.0",
    "raven": "^2.6.4",
    "reflect-metadata": "^0.1.12",
    "s3-download-stream": "^1.1.1",
    "standard-version": "^4.4.0",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typegoose": "^5.4.1",
    "typescript": "^3.0.3",
    "winston": "^3.1.0",
    "winston-cloudwatch": "^2.0.2",
    "winston-raven-sentry": "^2.0.0"
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "! grep -ir --exclude-dir=node_modules --exclude-dir=.git --exclude=package.json '// TEMP' ."
    }
  }
}
