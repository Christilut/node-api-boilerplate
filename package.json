{
  "name": "node-boilerplate-api",
  "version": "1.0.0",
  "description": "Boilerplate project for Nodejs API's",
  "author": "Christiaan Maks <christilut@gmail.com>",
  "main": "index.ts",
  "private": false,
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "start": "node dist/index",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "nodemon --exec 'ts-node' --ext ts,gql server/index.ts",
    "deploy": "git push heroku master",
    "release": "standard-version --no-verify",
    "lint-BROKEN": "tslint --project .",
    "precommit": "npm run test",
    "clean": "rm -rf dist/",
    "test": "cross-env NODE_ENV=test npm run clean && npm run build && ava --fail-fast dist/tests/*.test.js; npm run clean",
    "test:watch": "cross-env NODE_ENV=test npm run clean && copyfiles server/**/*.gql dist/ && concurrently --kill-others --raw \"npm run build:watch\" \"sleep 5 && ava --watch dist/tests/*.test.js\"",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --timeout 12000 --ui bdd --reporter spec --colors --compilers js:babel-core/register server/tests --recursive",
    "test:check-coverage": "npm run test:coverage && istanbul check-coverage",
    "report-coverage": "coveralls < ./coverage/lcov.info",
    "cli:create-admin": "ts-node cli/createAdmin"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Christilut/node-api-boilerplate.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "es2017",
    "API",
    "boilerplate",
    "graphql",
    "typeorm",
    "postgres",
    "sql",
    "typescript"
  ],
  "dependencies": {
    "@types/fs-extra": "^4.0.3",
    "@types/http-status": "^0.2.30",
    "@types/inquirer": "0.0.35",
    "@types/joi": "^10.4.4",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/node": "^8.0.47",
    "@types/raven": "^2.1.2",
    "@types/supertest": "^2.0.3",
    "@types/winston": "^2.3.7",
    "@types/zen-observable": "^0.5.3",
    "apollo-link": "^1.0.0",
    "apollo-server-express": "^1.2.0",
    "app-module-path": "2.2.0",
    "ava": "^0.23.0",
    "bcrypt": "1.0.3",
    "body-parser": "1.18.2",
    "compression": "1.7.1",
    "concurrently": "^3.5.0",
    "copyfiles": "^1.2.0",
    "cors": "2.8.4",
    "dotenv": "^4.0.0",
    "eslint-config-standard": "10.2.1",
    "express": "^4.16.2",
    "express-promise-router": "^2.0.0",
    "express-rate-limiter": "^1.3.1",
    "express-validation": "^1.0.2",
    "express-winston": "2.4.0",
    "forest-express-mongoose": "^1.5.0",
    "fs-extra": "4.0.2",
    "graphql": "^0.11.7",
    "graphql-tools": "^2.6.1",
    "handlebars": "^4.0.11",
    "helmet": "^3.9.0",
    "http-status": "1.0.1",
    "inquirer": "^3.3.0",
    "joi": "^13.0.1",
    "joi-objectid": "^2.0.0",
    "jsonwebtoken": "^8.1.0",
    "mailcomposer": "4.0.2",
    "mailgun-js": "0.13.1",
    "merge-graphql-schemas": "^1.2.0",
    "mockgoose": "^7.3.3",
    "mongoose": "^4.11.1",
    "morgan": "1.9.0",
    "nodemon": "^1.12.1",
    "randomstring": "^1.1.5",
    "raven": "^2.2.1",
    "reflect-metadata": "^0.1.10",
    "standard-version": "^4.2.0",
    "supertest": "^3.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.0.0",
    "typegoose": "^3.6.0",
    "typescript": "^2.5.3",
    "winston": "^2.4.0",
    "winston-cloudwatch": "1.12.0"
  },
  "devDependencies": {
    "commitizen": "^2.9.2",
    "coveralls": "3.0.0",
    "cross-env": "^5.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "0.14.3"
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "es2016",
      "stage-2"
    ],
    "plugins": [
      "transform-runtime",
      "add-module-exports",
      "transform-async-to-generator"
    ]
  }
}
